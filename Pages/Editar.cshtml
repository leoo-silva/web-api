@page
@model web.Pages.EditarModel
@{
    ViewData["Title"] = "Editar";
}

<h1 class="titulo">Editar Dados</h1>
<br />

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">CPF</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="cpf" value="@Model.pessoa.Cpf" disabled=""/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nome</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nome" value="@Model.pessoa.Nome" placeholder="Digite aqui seu nome"/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Profissão</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="profissao" value="@Model.pessoa.Profissao" placeholder="Digite aqui sua profissão"/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">País Onde Nasceu</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nacionalidade" value="@Model.pessoa.Nacionalidade" placeholder="Digite aqui sua nacionalidade"/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Data de Nascimento</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="dataNascimento" value="@Model.pessoa.DataNascimento.ToString("dd-MM-yyyy")"/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Peso</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="peso" value="@Model.pessoa.Peso" placeholder="Digite seu peso (casas decimais separados por vírgula '62,5')"/>
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Altura</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="altura" value="@Model.pessoa.Altura" placeholder="Digite sua altura (casas decimais separados por vírgula '1,82')"/>
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Editar</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Listagem" role="button">Cancelar</a>
        </div>
    </div>
</form>